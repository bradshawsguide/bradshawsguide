{
  "name": "bradshawsguide",
  "version": "0.1.0",
  "description": "Bradshaw's Guide for Tourists in Great Britain & Ireland",
  "author": "Paul Robert Lloyd",
  "private": "true",
  "repository": {
    "type": "git",
    "url": "https://github.com/paulrobertlloyd/bradshawsguide.git"
  },
  "devDependencies": {
    "autoprefixer": "latest",
    "node-sass": "latest",
    "nodemon": "latest",
    "postcss-cli": "latest"
  },
  "scripts": {
    "css:sass": "node-sass assets/styles/styles.scss -o assets/styles/",
    "css:postcss": "postcss --use autoprefixer assets/styles/styles.css --dir assets/styles/ --config config/postcss.json",
    "css": "npm run css:sass && npm run css:postcss",
    "watch": "nodemon -e scss -x 'npm run css'"
  }
}
