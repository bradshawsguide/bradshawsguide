{
  "name": "bradshawsguide",
  "version": "0.1.0",
  "private": true,
  "description": "Bradshaw's Guide for Tourists in Great Britain & Ireland",
  "keywords": [
    "railways",
    "reference",
    "travel"
  ],
  "homepage": "https://bradshaws.guide",
  "bugs": "https://github.com/paulrobertlloyd/bradshawsguide/issues",
  "license": "SEE LICENSE IN LICENSE",
  "author": "Paul Robert Lloyd",
  "repository": {
    "type": "git",
    "url": "https://github.com/paulrobertlloyd/bradshawsguide.git"
  },
  "scripts": {
    "prestart": "npm install",
    "start": "gulp start",
    "deploy": "gulp deploy",
    "dev": "gulp dev",
    "test": "xo || stylelint **/*.scss"
  },
  "config": {
    "src": {
      "assets": "./src/assets/",
      "path": "./src/"
    },
    "dest": {
      "assets": "./www/assets/",
      "path": "./www/"
    }
  },
  "xo": {
    "space": true,
    "envs": "browser",
    "ignores": [
      "src/plugins/**",
      "www/**"
    ]
  },
  "stylelint": {
    "extends": "stylelint-config-standard",
    "files": "**/*.scss",
    "rules": {
      "declaration-empty-line-before": "never",
      "string-quotes": "double"
    }
  },
  "devDependencies": {
    "autoprefixer": "latest",
    "babel-core": "^6.25.0",
    "babel-loader": "^7.1.0",
    "babel-preset-es2015": "^6.24.0",
    "browser-sync": "latest",
    "del": "^3.0.0",
    "gulp": "github:gulpjs/gulp#4.0",
    "gulp-imagemin": "latest",
    "gulp-postcss": "latest",
    "gulp-sass": "latest",
    "gulp-sass-glob": "latest",
    "gulp-sourcemaps": "latest",
    "stylelint": "^7.12.0",
    "stylelint-config-standard": "^16.0.0",
    "webpack": "^3.0.0",
    "webpack-stream": "^3.2.0",
    "xo": "^0.18.0"
  },
  "dependencies": {
    "fontfaceobserver": "^2.0.0",
    "leaflet": "^1.1.0",
    "turbolinks": "^5.0.0"
  }
}
