{
  "name": "bradshawsguide",
  "version": "0.1.0",
  "private": true,
  "description": "Bradshaw's Guide for Tourists in Great Britain & Ireland",
  "keywords": [
    "railways",
    "reference",
    "travel"
  ],
  "homepage": "https://bradshaws.guide",
  "bugs": "https://github.com/paulrobertlloyd/bradshawsguide/issues",
  "license": "SEE LICENSE IN LICENSE",
  "author": "Paul Robert Lloyd",
  "repository": {
    "type": "git",
    "url": "https://github.com/paulrobertlloyd/bradshawsguide.git"
  },
  "scripts": {
    "prestart": "npm install",
    "start": "gulp start",
    "deploy": "gulp deploy",
    "dev": "gulp dev",
    "test": "xo || stylelint **/*.scss"
  },
  "stylelint": {
    "extends": "stylelint-config-standard",
    "files": "**/*.scss",
    "rules": {
      "at-rule-no-unknown": [
        true,
        {
          "ignoreAtRules": [
            "include",
            "mixin"
          ]
        }
      ],
      "declaration-empty-line-before": "never",
      "string-quotes": "double"
    }
  },
  "xo": {
    "space": true,
    "envs": "browser",
    "ignores": [
      "src/plugins/**",
      "www/**"
    ]
  },
  "devDependencies": {
    "autoprefixer": "latest",
    "babel-core": "^6.25.0",
    "babel-plugin-external-helpers": "^6.22.0",
    "babel-preset-latest": "^6.24.0",
    "browser-sync": "latest",
    "del": "^3.0.0",
    "gulp": "github:gulpjs/gulp#4.0",
    "gulp-imagemin": "latest",
    "gulp-postcss": "latest",
    "gulp-sass": "latest",
    "gulp-sass-glob": "latest",
    "gulp-sourcemaps": "latest",
    "gulp-util": "^3.0.0",
    "rollup": "^0.47.0",
    "rollup-plugin-babel": "^3.0.0",
    "rollup-plugin-commonjs": "^8.1.0",
    "rollup-plugin-node-resolve": "^3.0.0",
    "rollup-plugin-uglify": "^2.0.1",
    "stylelint": "^8.0.0",
    "stylelint-config-standard": "^17.0.0",
    "xo": "^0.18.0"
  },
  "dependencies": {
    "fontfaceobserver": "^2.0.0",
    "leaflet": "^1.2.0",
    "turbolinks": "^5.0.0"
  }
}
